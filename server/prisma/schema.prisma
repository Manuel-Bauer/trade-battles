// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  givenName String
  familyName String
  photo String
  email String @unique
  watchlist String[]
  battle Battle?
  transaction Transaction?
}

model Battle {
  id Int @id @default(autoincrement())
  user User @relation(fields: [userId], references: [id])
  userId Int @unique
  battle_name String
  start_date DateTime @default(now())
  end_date DateTime
  transaction Transaction?
}

model Transaction {
  id Int @id @default(autoincrement())
  battle Battle @relation(fields: [battleId], references: [id])
  battleId Int @unique
  user User @relation(fields: [userId], references: [id])
  userId Int @unique
  date DateTime
  action String
  symbol String
  price Int
  quantity Int
}